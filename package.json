{
  "name": "reminder-app",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "Bartłomiej Śniatkowski",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev -w",
    "translations": "npm run extract:en && npm run compile:en && npm run compile:pl",
    "extract:en": "formatjs extract **/*.messages.ts* --ignore=**/*.d.ts --out-file src/renderer/src/providers/IntlProvider/locales/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile:en": "formatjs compile src/renderer/src/providers/IntlProvider/locales/en.json --ast --out-file src/renderer/src/providers/IntlProvider/localesCompiled/en.json",
    "compile:pl": "formatjs compile src/renderer/src/providers/IntlProvider/locales/pl.json --ast --out-file src/renderer/src/providers/IntlProvider/localesCompiled/pl.json",
    "build": "npm run typecheck && npm run translations && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.1"
  },
  "devDependencies": {
    "@babel/helper-plugin-utils": "^7.22.5",
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@formatjs/cli": "^6.2.1",
    "@formatjs/ts-transformer": "^3.13.6",
    "@reduxjs/toolkit": "^1.9.7",
    "@types/node": "^20.8.8",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@types/uuid": "^9.0.6",
    "@types/youtube": "^0.0.49",
    "@vitejs/plugin-react": "^4.1.0",
    "babel-plugin-formatjs": "^10.5.7",
    "date-fns": "^2.30.0",
    "electron": "^27.0.2",
    "electron-builder": "^24.6.4",
    "electron-vite": "^1.0.28",
    "eslint": "^8.52.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lowdb": "^6.1.1",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-intl": "^6.5.1",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.17.0",
    "redux": "^4.2.1",
    "styled-components": "^6.1.0",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "vite": "^4.5.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-svgr": "^4.1.0"
  }
}
